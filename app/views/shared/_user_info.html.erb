<div class="user_info">
  <a href="<%= user_path(current_user) %>">
    <%= gravatar_for current_user, :size => 30 %>
    <span class="user_nickname">
      <%= current_user.nickname %>
    </span>
    <span class="galleries">
      <%= pluralize(current_user.galleries.count, "gallery") %>
    </span>
  </a>
</div>