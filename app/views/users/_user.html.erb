<tr>
  <td width="15%"><%= gravatar_for user, :size => 30 %></td>
  <td><%= link_to user.nickname, user %></td>
  <td><a href="mailto:<%= user.email %>"><%= user.email %></td>
  <% if current_user.admin? %>
    <td><%= link_to "delete", user, :method => :delete, :confirm => "You sure?",
                                :title => "Delete #{user.nickname}" %></td>
  <% end %>
</tr>
    